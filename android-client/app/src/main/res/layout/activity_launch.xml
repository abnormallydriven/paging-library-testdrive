<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".launch.LaunchActivity">

    <Button
            android:text="Positional Data Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/positional_data_source"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/paged_key_data_source"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="PagedKey Data Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paged_key_data_source"
            app:layout_constraintTop_toBottomOf="@+id/positional_data_source"
            app:layout_constraintBottom_toTopOf="@+id/item_keyed_data_source"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="ItemKeyed Data Source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_keyed_data_source"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/paged_key_data_source"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>